<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_so_dotmatrix_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <header>
                    <button string="Dot Matrix" icon="fa-print" type="object" name="dotmatrix_print" custom="print"/>
                </header>


                <xpath expr="//notebook" position="inside">
                    <page string="Dot Matrix">

                        <button string="Refresh Printer Data" icon="fa-print"
                                states="draft,sent,sale,done" type="object" name="action_refresh_printer_data"/>

                        <pre>
                            <field name="printer_data"/>
                        </pre>

                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>